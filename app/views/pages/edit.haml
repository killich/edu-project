- content_for :navigation_menu do
  =render :partial => "shared/navigation_menu/pages/edit"
- content_for :title do
  Редактировать страницу: 
  = @page.title
- content_for :css do
  =stylesheet_link_tag 'basic/edit_form.css', :media=>'screen'
  =stylesheet_link_tag 'basic/page_preview.css', :media=>'screen'
- content_for :meta do
  %meta{ :name => "description", :content => "#{h @page.description}" }
  %meta{ :name => "keywords", :content => "#{h @page.keywords}" }
  %meta{ :name => "author", :content => "#{h @page.author}" }
- content_for :js do
  =javascript_include_tag "editor/editor"
    
-# javascript_tag :defer => 'defer' do =render :partial => "shared/editor/js"

= object_errors(@page)
      
.edit_form.overblock
  -form_for( :page, :url=>page_path, :html=>{:method=>:put} ) do |f|
    =render :partial => 'form', :locals => {:f => f, :page=>@page, :button=>'Обновить страницу', :title=>'Редактировать страницу'}